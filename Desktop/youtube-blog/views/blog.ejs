<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
        <title>Blog</title>
</head>

<body>
    <%- include('partials/nav') %>
        <div class="container mt-4">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImageURL %>" width="200px" />
            <pre><%= blog.body %></pre>
        </div>
        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImage %>" alt="Blog image">

        </div>
        <div class="container mt-3">
            <h1>Comments:(<%= comments.length %>)</h1>

            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method = "post">

                    <div class="mb-3">
                        <input type="text" name="content" class="form-control" placeholder="enetr your comment here">
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            

                <% } %>


 <div class="mt-4">
                    <% comments.forEach(comment => { %>
                        
                        <div>
                            <img src="<%= comment.createdBy.profileImageURL %>" width="50px" alt="profile image">
                            <%= comment.createdBy.fullName %>
                           <pre><%= comment.body %></pre>

                        </div>
                     
                    <% }) %>


                </div>

        </div>

        <%- include('partials/scripts') %>

</body>

</html>